---
import profile from "../../../data/profile";

const name = profile.fullName;
const headline = profile.headline;
const summary = profile.summary;

const primaryCta = { label: "View Projects", href: "/projects" };
const secondaryCta = { label: "Contact", href: "/contact" };

const proof = [
  { label: "XR", value: "Unity / OpenXR / XRI" },
  { label: "Mobile", value: "Flutter (Android/iOS)" },
  { label: "Domain", value: "Aviation maintenance & QC" },
];
---

<section class="hero" aria-label="Hero">
  <div class="intro">
    <p class="kicker">Portfolio</p>
    <h1 class="title">{name}</h1>
    <p class="headline">{headline}</p>
    <p class="summary">{summary}</p>

    <div class="cta" role="group" aria-label="Primary actions">
      <a class="btn primary" href={primaryCta.href}>{primaryCta.label}</a>
      <a class="btn" href={secondaryCta.href}>{secondaryCta.label}</a>
    </div>
  </div>

  <aside class="proof" aria-label="Proof points">
    <h2 class="proofTitle">Focus</h2>
    <dl class="proofGrid">
      {proof.map((p) => (
        <div class="proofItem">
          <dt>{p.label}</dt>
          <dd>{p.value}</dd>
        </div>
      ))}
    </dl>
  </aside>

  <style>
    .hero {
      display: grid;
      gap: 18px;
      grid-template-columns: 1.25fr 0.75fr;
      align-items: start;
    }

    @media (max-width: 900px) {
      .hero { grid-template-columns: 1fr; }
    }

    .kicker {
      margin: 0;
      font-size: 12px;
      letter-spacing: 0.12em;
      text-transform: uppercase;
      opacity: 0.7;
    }

    .title {
      margin: 6px 0 0;
      font-size: 40px;
      letter-spacing: -0.03em;
      line-height: 1.05;
    }

    .headline {
      margin: 10px 0 0;
      font-size: 16px;
      opacity: 0.9;
      max-width: 80ch;
    }

    .summary {
      margin: 10px 0 0;
      opacity: 0.85;
      max-width: 90ch;
    }

    .cta {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      margin-top: 14px;
    }

    .btn {
      text-decoration: none;
      padding: 10px 14px;
      border-radius: 14px;
      border: 1px solid rgba(0,0,0,0.12);
      opacity: 0.92;
    }
    .btn:hover { opacity: 1; }
    .primary {
      border-color: rgba(0,0,0,0.18);
      font-weight: 600;
    }

    .proof {
      border: 1px solid rgba(0,0,0,0.10);
      border-radius: 16px;
      padding: 12px;
    }

    .proofTitle {
      margin: 0 0 10px;
      font-size: 14px;
      opacity: 0.8;
    }

    .proofGrid {
      margin: 0;
      display: grid;
      gap: 10px;
    }

    .proofItem dt {
      font-size: 12px;
      opacity: 0.7;
      text-transform: uppercase;
      letter-spacing: 0.06em;
    }

    .proofItem dd {
      margin: 2px 0 0;
      font-size: 14px;
      opacity: 0.9;
    }
  </style>
</section>
