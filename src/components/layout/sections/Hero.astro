---
/**
 * Hero.astro
 * Consume datos desde src/data/profile.ts.
 * Nota: uso "as any" para evitar que el build falle si tu estructura exacta difiere.
 */


import profile from "../../../data/profile";

const name = profile.fullName;
const headline = profile.headline;
const summary = profile.summary;
const location = profile.location ?? "";
const email = profile.contact?.email ?? "";

const ctaPrimaryHref = "/projects";
const ctaSecondaryHref = "/contact";


---

<section class="hero" aria-label="Hero section">
  <div class="stack">
    <p class="kicker">Portfolio</p>
    <h1 class="title">{name}</h1>
    <p class="headline">{headline}</p>

    {summary ? <p class="summary">{summary}</p> : null}

    {(location || email) ? (
      <div class="meta" aria-label="Quick info">
        {location ? <span class="chip">{location}</span> : null}
        {email ? <a class="chip link" href={`mailto:${email}`}>{email}</a> : null}
      </div>
    ) : null}

    <div class="actions" aria-label="Primary actions">
      <a class="btn primary" href={ctaPrimaryHref}>View Projects</a>
      <a class="btn" href={ctaSecondaryHref}>Contact</a>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 8px 0 12px;
  }

  .stack {
    display: grid;
    gap: 10px;
    max-width: 860px;
  }

  .kicker {
    margin: 0;
    font-size: 12px;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    opacity: 0.7;
  }

  .title {
    margin: 0;
    font-size: 36px;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .headline {
    margin: 0;
    font-size: 16px;
    opacity: 0.85;
  }

  .summary {
    margin: 6px 0 0;
    font-size: 15px;
    opacity: 0.9;
  }

  .meta {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    margin-top: 8px;
  }

  .chip {
    display: inline-flex;
    padding: 6px 10px;
    border-radius: 999px;
    border: 1px solid rgba(0, 0, 0, 0.10);
    font-size: 13px;
    opacity: 0.9;
    text-decoration: none;
  }

  .chip.link:hover {
    background: rgba(0, 0, 0, 0.04);
  }

  .actions {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    margin-top: 10px;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 10px 14px;
    border-radius: 10px;
    border: 1px solid rgba(0, 0, 0, 0.12);
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
  }

  .btn:hover {
    background: rgba(0, 0, 0, 0.04);
  }

  .btn.primary {
    border-color: rgba(0, 0, 0, 0.18);
    background: rgba(0, 0, 0, 0.06);
  }

  @media (max-width: 520px) {
    .title {
      font-size: 30px;
    }
  }
</style>
